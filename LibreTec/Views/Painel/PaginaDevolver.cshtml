@model Task<List<LivroModel>>

@{
}
<div style="width:100%;height:100%;display:flex;flex-direction:column;justify-content:center;align-items:center">

    <button id="CarregandoDevolverLivros" class="btn btn-primary" type="button" style="display:none" disabled>
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        Devolvendo Livros...
    </button>

    <div id="DivAlert" class="alert alert-success" role="alert" style="margin-top:20px;display:none">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        <span id="TextoDoAlert"></span>
    </div>

    <div id="DivAlertDanger" class="alert alert-danger" role="alert" style="margin-top:20px;display:none">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        <span id="TextoDoAlert"></span>
    </div>


    <div style="width:100%;height:90%;display:flex;flex-direction:row;justify-content:center;align-items:center;gap:100px;">
        <section class="Icon-Emprestar" style="height:90%;width:300px">
        </section>
        <section style="height:500px;display:flex;flex-direction:column;align-items:center;gap: 20px">
                <div style="display:flex;flex-direction:row;gap:20px">
                    <select id="Campo" class="Escolher-Pesquisa" style="width:200px;height:60px;font-weight:700;font-size:25px; outline: 0;border: 0 none;box-shadow: 0 0 0 0;border-radius: 10px;
                box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;text-align:center;color:#005C6D">
                        <option selected>Opções</option>
                        <option value="Titulo">Título</option>
                        <option value="RA">RA</option>
                        <option value="Nome">Nome</option>
                        <option value="Tombo_Atual">Tombo Atual</option>
                        <option value="Tombo_Antigo">Tombo Antigo</option>
                    </select>

                    <div style="width:500px;height:60px;display:flex;flex-direction:row;background-color:#fff;border-radius:10px;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset">
                        <input id="CampoPesquisa" type="text" placeholder="Período" style="background-color:transparent;border-radius:10px;box-shadow: none" />
                    <button onclick="enviarParametrosParaServidor()" class="Botao-Pesquisa" style="width:60px;height:60px;background-color:#005C6D;border-radius:10px">

                    </button>
                    </div>
                </div>

            <div id="LocalParaAvisos" style="width:570px;height:450px;overflow-y:auto;display:none;flex-direction:column;gap:20px">
                <button class="btn" type="button" disabled id="LoadingPesquisa" style="display:none">
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Loading...
                </button>

                <button class="btn btn-info" type="button" id="NadaEncontrado" style="border-radius:10px;margin:20px;display:none" disabled>
                    Nada encontrado, tente novamente
                </button>
            </div>

            <div id="LocalCardsResultados" style="width:570px;height:450px;overflow-y:auto;display:flex;flex-direction:column;gap:20px">
                



                
            </div>

        </section>
    </div>
</div>

<div style="position: absolute;right:50px;bottom:10%;width:125px;height:90px;background-color: #DADADA;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;border-radius:20px;display:flex;flex-direction:row;align-items:center;justify-content:space-around">

    <div onclick="MostrarLivrosDevolver()" class="Botao-Devolver" style="width:75px; height:75px;background-color:#fff;border-radius:20px;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);">
    </div>
</div>