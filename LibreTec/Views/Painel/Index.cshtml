@{
    ViewData["Title"] = "Home Page";
}

<div style="width:100%;height:100%;display:flex;justify-content:center;align-items: center;gap:20%;">
    <section style="display:grid;grid-template-rows: repeat(1, 1fr);grid-template-rows: auto auto;gap:50px">
        <a asp-controller="Painel" asp-action="PaginaEmprestar" style="width:250px;height:250px;display:flex;background-color:#fff;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;border-radius:20px;flex-direction:column;align-items:center;justify-content: space-evenly">
            <div class="Icone-User" style="width: 150px; height:150px;">

            </div>
            <p style="color:#005C6D;font-size:24px;font-weight:700">Emprestar</p>
        </a>


        <a asp-controller="Painel" asp-action="PaginaDevolver" style="width:250px;height:250px;display:flex;background-color:#fff;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;border-radius:20px;flex-direction:column;align-items:center;justify-content: space-evenly">
            <div class="Icone-User" style="width: 150px; height:150px;">
            </div>
            <p style="color:#005C6D;font-size:24px;font-weight:700">Devolver/Renovar</p>
        </a>
    </section>

    <section style="display:grid;grid-template-rows: repeat(1, 1fr);grid-template-rows: auto auto;gap:50px">
        <section class="Logo" style="width:250px;height:250px">

        </section>

        <a asp-controller="Painel" asp-action="PaginaBiblioteca" style="width:250px;height:250px;display:flex;background-color:#fff;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;border-radius:20px;flex-direction:column;align-items:center;justify-content: space-evenly">
            <div class="Icone-Livro" style="width: 150px; height:150px;">
            </div>
            <p style="color:#005C6D;font-size:24px;font-weight:700">Biblioteca</p>
        </a>
    </section>

    <section style="display:grid;grid-template-rows: repeat(1, 1fr);grid-template-rows: auto auto;gap:50px">
        <a asp-controller="Painel" asp-action="PaginaIncluir" style="width:250px;height:250px;display:flex;background-color:#fff;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;border-radius:20px;flex-direction:column;align-items:center;justify-content: space-evenly">
            <div class ="Icone-Collumn" style="width: 150px; height:150px;">
            </div>
            <p style="color:#005C6D;font-size:24px;font-weight:700">Incluir/Atualizar</p>
        </a>

        <a asp-controller="Painel" asp-action="PaginaRemover" style="width:250px;height:250px;display:flex;background-color:#fff;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;border-radius:20px;flex-direction:column;align-items:center;justify-content: space-evenly">
            <div class="Icone-Collumn" style="width: 150px; height:150px;">
            </div>
            <p style="color:#005C6D;font-size:24px;font-weight:700">Remover</p>
        </a>
    </section>
</div>
