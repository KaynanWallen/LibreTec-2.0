@model LivroModel

@{
    ViewData["Title"] = "Pagina Emprestar";
}

<form asp-controller="Livro" asp-action="PutLivro" method="post" style="width:100%;height:100%">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert" style="position:absolute;right:20px;margin-top:20px">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            <span> @TempData["MensagemSucesso"]</span>
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert" style="position:absolute;right:20px;margin-top:20px">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            <span> @TempData["MensagemErro"]</span>
        </div>
    }


    <div style="width:100%;height:100%;display:flex;flex-direction:row;justify-content:center;align-items:center;gap:100px">
        <section class="Icon-Emprestar" style="height:90%;width:300px">
        </section>
        <section style="display:flex;flex-direction:column;gap:30px">
            
            <input asp-for="Tombo_Atual" type="text" placeholder="Tombo do Livro" />
            <input asp-for="Emprestado.Nome" type="text" placeholder="Aluno" />
            <input asp-for="Emprestado.RA" type="text" placeholder="RA" />
            <input asp-for="Emprestado.Data_Retirada" type="text" placeholder="Data de Retirada" />
            <input asp-for="Emprestado.Data_Devolucao" type="text" placeholder="Data de Devolução" />
            <input asp-for="Emprestado.Periodo" type="text" placeholder="Período" />
        </section>
    </div>

    <div style="position: absolute;right:50px;bottom:10%;width:125px;height:90px;background-color: #DADADA;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset;border-radius:20px;display:flex;flex-direction:row;align-items:center;justify-content:space-around">

        <button type="submit" class="Botao-Devolver" style="width:75px; height:75px;background-color:#fff;border-radius:20px;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);outline: 0;border: 0 none">
        </button>
    </div>
</form>