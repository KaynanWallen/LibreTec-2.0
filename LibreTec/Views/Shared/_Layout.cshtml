<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibreTec</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MediaQuery.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibreTec.styles.css" asp-append-version="true" />
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.css" rel="stylesheet">
</head>
<body style="width: 100vw; height: 100vh;">
    <header style="width:100%;height:20%;background-color: #005C6D;display:flex;flex-direction:row;align-items: center;justify-content: center">
        <a asp-controller="Painel" asp-action="Index" class="Logo-Etec" style="width:150px;height:100px;position:absolute; left: 10px">
        </a>

        <div>
            <p style="color: #fff;font-size:64px;font-weight:600">Libre-Tec</p>
        </div>

        <div id="Settings" style="width:300px;height:150px;display:flex;justify-content:center;align-items:center;display:flex;position:absolute;right:20px">
            <section onclick="OcultarSettings()" class="Logo-Settings" style="width:150px;height:100px;cursor:pointer">
            </section>
        </div>

        <section id="Menu-Settings" style="width:300px;height:150px;background-color: #DADADA;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25) inset; position: absolute;right:20px;border-radius:20px;padding:10px;justify-content:space-between;display:none;flex-direction:column">
            <div onclick="OcultarMenuSettings()" class="Logo-Settings" style="width:50px;height:50px;margin-left:auto;cursor:pointer">

            </div>

            <div style="display:flex;justify-content:space-around">
                <a asp-controller="Livro" asp-action="AdicionarTodosLivrosExcel" class="Botao-Download" style="width:75px; height:75px;background-color:#fff;border-radius:20px;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);">
                </a>
                <a asp-controller="Login" asp-action="Sair" class="Botao-Sair" style="width:75px; height:75px;background-color:#fff;border-radius:20px;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);">
                </a>
                <a asp-controller="Painel" asp-action="PaginaSettings"  class="Botao-Editar" style="width:75px; height:75px;background-color:#fff;border-radius:20px;box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);">
                </a>
            </div>
        </section>
        
    </header>

    <main style="width:100%; height: 70%;background-color: #E6E6E6">
        @RenderBody()
    </main>

    <footer style="width:100%;height:10%;background-color: #005C6D; display:flex;flex-direction:row;text-align:center;justify-content:space-between;align-items:center">
       
        <div style="width:320px;height:50px">
            <div class="LogoCK" style="width:50px; height:50px;margin-left:50px">

            </div>
        </div>


        <div style="width:400px;max-height:100%;display:flex;flex-direction:column">
            <h2 style="font-size:24px;margin:0px;color:#fff;font-weight:700">Seja Bem Vindo</h2>
            <p style="margin:0px;font-weight:500;color:#fff">Libre-Tec é um sistema para organização de nosso acervo bibliotecario!</p>
        </div>

        <div class="Logos" style="width:320px;height:50px">

        </div>


    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.13.6/datatables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
