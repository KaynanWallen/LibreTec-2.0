@model UsuarioModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<form asp-controller="Login" asp-action="Logar" method="post" style="width:100%;height:100%">
    <main class="Login BackgroundImage" style="width: 100%; height: 100%;display: flex; justify-content: center; align-items: center;">
        <div class="Card-Login"  style="background-color: #ffffff;display:flex;flex-direction:row">

            <section class="Metade-Azul" style="width:100%;height:100%;background-color: #005C6D;flex-direction:column;justify-content:space-between">
                <div style="width: 100%; height:100px;display: flex; flex-direction: row;align-items: center;margin: 10px;color: #fff;font-size:36px;font-weight:700;margin-top:25px">
                    <div class="Logo" style="width:100px; height: 100px">
                    </div>
                    <p style="margin-bottom: 0px; padding:10px">Libre-Tec</p>
                </div>

                <div style="width:100%;display:flex;align-items:center;flex-direction:column;margin-bottom: auto;margin-top: 15%">
                    <p style="color: #fff;font-weight:700;font-size:36px">Bem Vindo de Volta</p>
                    <p style="color: #fff;font-size: 16px;font-weight:500">Faça o Login e acesso o sistema</p>
                </div>

                <div style="width: 100%;display:flex;justify-content:center">
                    <p style="color: #fff;font-weight:400"> Desenvolvido Por kaynan Wallen e Caio </p>
                </div>
            </section>

            <section class="Metade-Branca" style="background-color: #D9D9D9">
                <div class="Logo-MetadeBranca-1000px" style="">
                    <div style="width:100%; height:100px;display: flex; flex-direction: row;align-items: center;margin: 10px;margin-top:25px">
                        <div class="Logo" style="width:100px; height: 100px">
                        </div>
                        <p style="margin-bottom: 0px; padding:10px;color: #005C6D;font-size:36px;font-weight:700">Libre-Tec</p>
                    </div>
                </div>

                <div class="Logo-Celular">
                    <div class="Logo" style="width:100px; height: 100px">
                    </div>
                    <p style="margin-bottom: 0px; padding:10px;color: #005C6D;font-size:36px;font-weight:700">Libre-Tec</p>
                </div>

                <div style="width:100%;height:100px;display:flex;flex-direction:row;justify-content:space-between;align-items: flex-end;margin-top:25px">
                    <p style="color: #005C6D;font-size: 40px;font-weight:700;margin-bottom: 0px;margin-left:20px">Entrar</p>
                    <div class="Locked" style="height:100px;width:100px;margin-right: 20px;">
                    </div>
                </div>

                <div style="width:100%;display:flex;align-items:center;flex-direction:column;gap:20px;margin-top:50px;">
                    <input asp-for="Login" type="text" style=""/>
                    <input asp-for="Senha" type="text" style="" />
                    <p style="color: #005C6D;font-size: 24px;">Esqueceu sua senha?</p>
                    <button type="submit" style="width:200px;height:60px;border: 0 none;background-color: #005C6D;color: #fff;font-size:24px;font-weight:700;border-radius:20px">Entrar</button>
                </div>
            </section>
        </div>
    </main>
</form>